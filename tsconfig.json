{
  "extends": "@react-native/typescript-config",
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/Pods"],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@navigation/*": ["navigation/*"],
      "@assets/*": ["assets/*"],
      "@shared/*": ["shared/*"]
    },
    "strict": true,
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "skipLibCheck": true
  }
}
